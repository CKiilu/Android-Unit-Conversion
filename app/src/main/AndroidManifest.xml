<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.scurrae.chris.unitconversion">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Nav"
            android:label="@string/title_activity_nav"
            android:parentActivityName=".Main"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.scurrae.chris.unitconversion.Main" />
        </activity>
        <activity android:name=".Distance"
            android:label="@string/dist"
            android:parentActivityName=".Nav"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support,PARENT_ACTIVITY"
                android:value="com.scurrae.chris.unitconversion.Nav"/>
        </activity>
        <activity android:name=".Temperature"
            android:label="@string/temp"
            android:parentActivityName=".Nav"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support,PARENT_ACTIVITY"
                android:value="com.scurrae.chris.unitconversion.Nav"/>
        </activity>
        <activity android:name=".Suggestions"
            android:label="@string/suggesttions"
            android:parentActivityName=".Nav"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support,PARENT_ACTIVITY"
                android:value="com.scurrae.chris.unitconversion.Nav"/>
        </activity>
        <activity android:name=".Rate"
            android:label="@string/ratesa"
            android:parentActivityName=".Nav"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support,PARENT_ACTIVITY"
                android:value="com.scurrae.chris.unitconversion.Nav"/>
        </activity>

    </application>

</manifest>
